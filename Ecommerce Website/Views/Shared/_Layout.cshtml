<!DOCTYPE html>
<html lang="en">
<head>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- page title -->
    <title>Home page</title>
    <!-- favicon -->
    <link rel="icon" type="image/x-icon" href="~/images/header/yyy.png" />
    <!-- tailwind css -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/output.css" />
    <!-- box-icons -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@500&family=Poppins:wght@400;500;600&display=swap"
          rel="stylesheet" />
    <!-- swiper slider css -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <!-- main css -->
    <link rel="stylesheet" href="~/css/index.css" />

</head>
<body>
    <!-- HEADER -->
    <div class="hidden lg:block header__top py-2 border-b border-gray-200 relative z-20">
        <div class="container flex items-center justify-between">
            <div class="flex">
                <p class="pr-4 border-r border-gray-200 text-sm">(90)123 45 67</p>
                <a href="#" class="pl-4 text-sm">Store location</a>
            </div>
            <div class="flex items-center">
                <div class="pl-4">
                    <ul>
                        @if (string.IsNullOrEmpty(ViewBag.CheckSession))
                        {
                            <li>
                                <a href="@Url.Action("customerLogin","Customer")" class="text-sm hover:text-[#4E97FD] duration-200">
                                    Log In &nbsp;<span class="text-gray-400">|</span>&nbsp; Sign Up
                                </a>
                            </li>

                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("customerLogout","Customer")" class="text-sm hover:text-[#4E97FD] duration-200">
                                    LogOut
                                </a>
                            </li>

                        }

                    </ul>

                </div>
            </div>
        </div>
    </div>
    <!-- Main header -->
    <div class="header__main sticky top-0 left-0 z-10 w-full bg-white shadow-lg">
        <div class="container flex items-center justify-between">
            <a href="#" class="flex items-center py-6 lg:py-0">
                <img src="~/images/header/logo.png"
                     alt="logo"
                     class="w-6 md:w-8 mr-1 md:mr-2" />
                <span class="text-xl md:text-3xl font-semibold">GO>SHOP</span>
            </a>

            <ul class="hidden lg:flex items-center">
                <li class="py-6 mr-3 2xl:mr-4 hover:text-[#4E97FD] duration-200">
                    <a href="@Url.Action("Index","Customer")" class="font-medium">Home</a>
                </li>
                <li class="py-6 mx-3 2xl:mx-4 hover:text-[#4E97FD] duration-200">
                    <a href="@Url.Action("fetchAllProducts","Customer")" class="font-medium">Product</a>
                </li>

                <li class="py-6 mx-3 2xl:mx-4 hover:text-[#4E97FD] duration-200">
                    <a href="@Url.Action("AboutUs","Customer")" class="font-medium">About Us</a>
                </li>
                <li class="pages relative py-6 mx-3 2xl:mx-4">
                    <span class="font-medium flex items-center duration-200 cursor-default">
                        Category <i class="bx bx-chevron-down text-lg"></i>
                    </span>
                    <ul class="overflow-hidden opacity-0 absolute left-0 top-[120%] py-2 bg-white shadow-lg min-w-[170px] duration-300">
                        @Html.Partial("fetchCategoryList", ViewData["category"])

                    </ul>
                </li>
                <li class="py-6 ml-3 2xl:ml-4 hover:text-[#4E97FD] duration-200">
                    <a href="@Url.Action("feedback","Customer")" class="font-medium">Contact Us</a>
                </li>
            </ul>

            <ul class="flex items-center">

                <li class="mx-2 sm:mx-3 md:mx-4 2xl:mx-6">
                    <a href="@Url.Action("CustomerProfile","Customer")"
                       class="text-2xl sm:text-[27px] md:text-3xl hover:text-[#4E97FD] duration-200">
                        <i class="bx bx-user"></i>
                    </a>
                </li>
                <li class="mx-2 sm:mx-3 md:mx-4 2xl:mx-6">
                    <a href="#"
                       class="text-2xl sm:text-[27px] md:text-3xl hover:text-[#4E97FD] duration-200">
                        <i class="bx bx-heart"></i>
                    </a>
                </li>
                <li class="cart relative hover:text-[#4E97FD] cursor-pointer">
                    <a href="@Url.Action("fetchCart","Customer")"
                       class="text-2xl sm:text-[27px] md:text-3xl duration-200">
                        <i class="bx bx-shopping-bag"></i>
                    </a>
                </li>
                <li class="ml-2 sm:ml-3 md:ml-4 lg:hidden">
                    <a href="#"
                       class="text-[27px] sm:text-3xl md:text-4xl hover:text-[#4E97FD] duration-200">
                        <i class="bx bx-menu"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
