                        <i class="bx bxl-facebook-circle"></i>
                    </a>
                </ul>
            </div>
        </aside>
    </div>
    <!-- Search area -->
    <div class="search-area flex items-center justify-center h-screen w-screen fixed top-0 left-0 z-20 bg-white duration-300">
        <input type="text"
               class="w-4/5 md:w-[60%] py-1 sm:py-2 text-2xl sm:text-4xl text-gray-600 outline-none border-b-2 border-[#4E97FD]"
               placeholder="Search our store" />
        <i class="bx bx-x close-search font-normal text-gray-700 text-3xl sm:text-5xl absolute top-6 sm:top-10 right-6 sm:right-10 md:right-16"></i>
    </div>

