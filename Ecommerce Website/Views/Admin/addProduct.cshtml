
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Add New Product</h2>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-8">
        <form method="post" enctype="multipart/form-data" class="container-fluid px-4">

            <input type="text" name="product_name" class="form-control my-3" placeholder="Enter Product Name" />

            <input type="text" name="product_price" class="form-control my-3" placeholder="Enter Product Price" />

            <input type="text" name="product_description" class="form-control my-3" placeholder="Enter Product Description" />

            @Html.Partial("CategoryDropdown", ViewData["category"])

            <input type="file" name="product_image" class="form-control my-3" />

            <input type="submit" value="Add New Product" class="btn btn-primary" />

        </form>
    </div>
    <div class="col-md-2"></div>
</div>
