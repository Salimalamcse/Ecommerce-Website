@model Cart

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Customer Update</h2>
</div>

<div class="container d-flex justify-content-center">
    <div class="col-md-6">
        <form method="post" class="p-4 border rounded shadow">
            <input type="hidden" value="@Model.cart_id" name="cart_id" class="form-control my-3" />
            <input type="hidden" value="@Model.prod_id" name="prod_id" class="form-control my-3" />
            <input type="hidden" value="@Model.cust_id" name="cust_id" class="form-control my-3" />
            <input type="hidden" value="@Model.product_quntity" name="product_quntity" class="form-control my-3" />

            <select name="cart_status" class="form-control my-3">
                <option value="0">Pending</option>
                <option value="1">Order</option>
            </select>

            <input type="submit" value="Update Profile" class="btn btn-primary w-100" />
        </form>
    </div>
</div>
