@model Customer
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Customer Update</h2>
</div>

<div>
    <div class="col-md-2"></div>
    <div class="col-2">
        <form method="post" enctype="multipart/form-data">

            <input type="text" value="@Model.customer_Id" name="customer_id" class="form-control my-3" />

            <input type="text" value="@Model.customer_name" name="customer_name" class="form-control my-3" />

            <input type="text" value="@Model.customer_phone" name="customer_phone" class="form-control my-3" />

            <input type="text" value="@Model.customer_email" name="customer_email" class="form-control my-3" />

            <input type="text" value="@Model.customer_password" name="customer_password" class="form-control my-3" />

            <input type="text" value="@Model.customer_gender" name="customer_gender" class="form-control my-3" />


            <input type="text" value="@Model.customer_coutory" name="customer_coutory" class="form-control my-3" />

            <input type="text" value="@Model.customer_city" name="customer_city" class="form-control my-3" />

            <input type="text" value="@Model.customer_address" name="customer_address" class="form-control my-3" />

            <input type="file" name="customer_image" class="form-control my-3" />

            <input type="submit" value="Update Profile" class="form-control my-3 btn-primary" />

        </form>
    </div>
    <div class="col-md-2"></div>
</div>
