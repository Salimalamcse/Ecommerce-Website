@model Category
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Update / Edit caterory</h2>
</div>

<div class="container-fluid px-4 ">
    <div class="col-md-2"></div>
    <div class="col-2 container-fluid px-4">
        <form method="post">

            <input type="hidden" name="category_id" value="@Model.category_id" />
            <input type="text" name="category_name" value="@Model.category_name" class="form-control my-3" />
            <input type="submit" value="Update Category" class="form-control my-3 btn btn-primary" />

        </form>

    </div>
    <div class="col-md-2"></div>
</div>




