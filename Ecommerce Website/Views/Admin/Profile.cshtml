@model List<Admin>
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">My profile</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <form method="post">

            <input type="hidden" name="admin_id" value="@Model[0].admin_id" />

           <input type="text" placeholder="Enter Your Name" name="admin_name" class="form-control my-3 " value="@Model[0].admin_name" />

            <input type="text" placeholder="Enter Your Email" name="admin_email" class="form-control my-3" value="@Model[0].admin_email" />

            <input type="text" placeholder="Enter Your Password" name="admin_password" class="form-control my-3" value="@Model[0].admin_password"/>

            <input type="hidden" placeholder="Enter Your Image" name="admin_image" value="@Model[0].admin_image" />

          <input type="submit" value="Update profile" class="form-control my-3 btn btn-primary" />
    </form>
        <form method="post" asp-action="ChangeProfileImage" enctype="multipart/form-data" class="text-center ">

            <input type="hidden" name="admin_id" value="@Model[0].admin_id" />
            <input type="hidden" name="admin_name" value="@Model[0].admin_name" />
            <input type="hidden" name="admin_email" value="@Model[0].admin_email" />
            <input type="hidden" name="admin_password" value="@Model[0].admin_password" />
            <img src="@("~/admin_image/"+Model[0].admin_image)" asp-append-version="true" style="width:250px; height:250px"class="my-3 " />
            <br />
            <input type="file" name="admin_image" class="my-3 " />

            <input type="submit" value="Update Image" class=" my-3 btn btn-primary" />
    </form>
    </div>
    <div class="col-md-2"></div>
</div>
