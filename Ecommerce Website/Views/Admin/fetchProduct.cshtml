@model List<Product>

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Product's</h2>
</div>

<div class="row text-center">
    <div class="col-12">
        <a href="@Url.Action("addProduct","Admin")" class="btn btn-primary">Add New Product</a>
        <table class="table table-bordered table-striped text-center mt-3">
            <thead>
                <tr>

                    @* <th>Product id</th> *@
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Image</th>
                    <th>Options</th>
                    

                </tr>
            </thead>
            <tbody>
                @foreach (var prod in Model)
                {
                    <tr>
                       @*  <td>@prod.product_id</td> *@
                        <td>@prod.product_name</td>
                        <td>@prod.product_Description</td>
                        <td><img src="@("~/product_images/"+prod.product_image)" asp-append-version="true" height="60px" width="40"/>  </td>

                        <td>
                            <a href="@Url.Action("updateProduct","Admin",new{id=prod.product_id})" class="btn btn-warning">Update</a>
                            <a href="@Url.Action("ProductDetails","Admin",new{id=prod.product_id})" class="btn btn-primary">Detail</a>
                            <a href="@Url.Action("deletePermissionProduct","Admin",new{id=prod.product_id})" class="btn btn-danger">Delete</a>

                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>



