
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Product>

<div class="container mx-auto mt-10 px-4">
    <h2 class="text-center text-2xl font-bold uppercase tracking-widest">Product Detail</h2>

    @foreach (var pro in Model)
    {
        <div class="flex flex-col md:flex-row items-center mt-8 bg-white shadow-lg rounded-lg p-6">
            <!-- Product Image -->
            <div class="md:w-1/2 flex justify-center">
                <img src="@Url.Content("~/product_images/" + pro.product_image)" asp-append-version="true"
                     class="w-full max-w-sm rounded-lg shadow-md" alt="@pro.product_name">
            </div>

            <!-- Product Details -->
            <div class="md:w-1/2 mt-6 md:mt-0 md:pl-8">
                <h3 class="text-2xl font-semibold">@pro.product_name</h3>
                <h4 class="text-xl text-blue-600 font-bold mt-2">₹@pro.product_Price</h4>
                <p class="text-gray-700 mt-4">@pro.product_Description</p>

                <!-- Add to Cart & Buy Now Buttons -->
                <div class="mt-6 flex space-x-4">
                    <a href="" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg shadow-md transition">
                        <i class="fas fa-shopping-cart"></i> Add to Cart
                    </a>
                    <a href="" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg shadow-md transition">
                        <i class="fas fa-bolt"></i> Buy Now
                    </a>
                </div>
            </div>
        </div>
    }
</div>





